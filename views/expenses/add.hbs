<h1>
  {{title}}
</h1>

<form method="POST">
  <fieldset>
    <label for="amount" class="col-2">
      Amount:
    </label>
    <input name="amount" id="amount" required />
  </fieldset>
  <fieldset>
    <label for="date" class="col-2">
      Date:
    </label>
    <input name="date" id="date" required type="date" />
  </fieldset>
  <fieldset>
    <label for="category" class="col-2">
      Category:
    </label>
    <input name="category" id="category" required />
  </fieldset>
  {{! No need to specify Status since it has a default value }}
  {{! Button needs to be inside <form> element to trigger POST }}
  <button class="offset-3 btn btn-primary">
    Save
  </button>
</form>