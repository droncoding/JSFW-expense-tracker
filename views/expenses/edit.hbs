<h1>
  {{title}}
</h1>

<form method="POST">
  <fieldset>
    <label for="amount" class="col-2">
      Amount:
    </label>
    <input name="amount" id="amount" value="{{expense.amount}}" required />
  </fieldset>
  <fieldset>
    <label for="date" class="col-2">
      Date:
    </label>
    <input name="date" id="date" required value="{{expense.date}}" />
  </fieldset>
  <fieldset>
    <label for="category" class="col-2">
      Category:
    </label>
    <input name="category" id="category" value="{{expense.category}}" required />
  </fieldset>
  <fieldset>
    <label for="account" class="col-2">
      Account:
    </label>
    <select name="account" id="account">
      
      {{#each accountList}}
        {{createOption this.name ../expense.account }}
      {{/each}}
    </select>
  </fieldset>
  
  <button class="offset-3 btn btn-primary">
    Save
  </button>
</form>